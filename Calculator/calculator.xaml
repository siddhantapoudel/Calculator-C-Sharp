                    Style="{DynamicResource ButtonStyle1}"
                    Click="NumericButton_Click"/>

            <Button Content="0" 
                    Grid.Column="1"  
                    Grid.Row="5"
                    Margin="2"
                    FontSize="20"
                    FontWeight="SemiBold"
                    Foreground="WhiteSmoke"
                    Style="{DynamicResource ButtonStyle1}"
                    Click="NumericButton_Click"/>

            <Button Content="=" 
                    Grid.Column="2"
                    Grid.ColumnSpan="2"
                    Grid.Row="5"
                    Margin="2"
                    FontSize="20"
                    FontWeight="SemiBold"
                    Foreground="Gray"
                    Style="{DynamicResource ButtonStyle1}"
                    Click="OperationButton_Click"/>
        </Grid>
    </Grid>
</Window>
