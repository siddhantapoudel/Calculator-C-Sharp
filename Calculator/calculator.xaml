                    Click="NumericButton_Click"/>

            <Button Content="-" 
                    Grid.Column="3"  
                    Grid.Row="3"
                    Margin="2"
                    FontSize="20"
                    FontWeight="SemiBold"
                    Foreground="Gray"
                    Style="{DynamicResource ButtonStyle1}"
                    Click="OperationButton_Click"/>

            <Button Content="1" 
                    Grid.Column="0"  
                    Grid.Row="4"
                    Margin="2"
                    FontSize="20"
                    FontWeight="SemiBold"
                    Foreground="WhiteSmoke"
                    Style="{DynamicResource ButtonStyle1}"
                    Click="NumericButton_Click"/>

            <Button Content="2" 
                    Grid.Column="1"  
                    Grid.Row="4"
                    Margin="2"
                    FontSize="20"
                    FontWeight="SemiBold"
                    Foreground="WhiteSmoke"
                    Style="{DynamicResource ButtonStyle1}"
                    Click="NumericButton_Click"/>

            <Button Content="3" 
                    Grid.Column="2"  
                    Grid.Row="4"
                    Margin="2"
