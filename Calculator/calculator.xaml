                    Click="NumericButton_Click"/>

            <Button Content="+" 
                    Grid.Column="3"  
                    Grid.Row="4"
                    Margin="2"
                    FontSize="20"
                    FontWeight="SemiBold"
                    Foreground="Gray"
                    Style="{DynamicResource ButtonStyle1}"
                    Click="OperationButton_Click"/>

            <Button Content="." 
                    Grid.Column="0"  
                    Grid.Row="5"
                    Margin="2"
                    FontSize="20"
