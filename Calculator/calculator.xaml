                    FontWeight="SemiBold"
                    Foreground="WhiteSmoke"
                    Style="{DynamicResource ButtonStyle1}"
                    Click="NumericButton_Click"/>

            <Button Content="5" 
                    Grid.Column="1"  
                    Grid.Row="3"
                    Margin="2"
                    FontSize="20"
                    FontWeight="SemiBold"
